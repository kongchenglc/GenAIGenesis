{
  "manifest_version": 3,
  "name": "AI Voice Assistant for Visually Impaired",
  "version": "1.0",
  "description": "An AI-powered voice assistant Chrome extension to help blind and visually impaired users navigate the web",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "tts",
    "notifications",
    "background"
  ],
  "action": {
    "default_icon": "icons/icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "permission.html",
        "permission.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*"
  ]
}